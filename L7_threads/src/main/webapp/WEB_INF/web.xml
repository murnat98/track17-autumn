<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        metadata-complete="false"
        version="3.1">

    <servlet>
        <servlet-name>send</servlet-name>
        <servlet-class>ru.track.chat.SendMessage</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>chat</servlet-name>
        <servlet-class>ru.track.chat.Chat</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>check_new_messages</servlet-name>
        <servlet-class>ru.track.chat.CheckNewMessages</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>send</servlet-name>
        <url-pattern>/send</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>chat</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>check_new_messages</servlet-name>
        <url-pattern>/check_new_messages</url-pattern>
    </servlet-mapping>

</web-app>